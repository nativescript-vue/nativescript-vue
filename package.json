{
  "name": "nativescript-vue",
  "version": "3.0.0-rc.1",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "devtools.js",
    "nativescript.webpack.js"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "simple-git-hooks",
    "pack:template": "npm pack ./packages/template-blank",
    "prepack": "npm run build && npm run pack:template"
  },
  "dependencies": {
    "@vue/compiler-sfc": "^3.4.3",
    "@vue/devtools": "^7.0.2",
    "@vue/runtime-core": "^3.4.3",
    "@vue/shared": "^3.4.3",
    "cross-spawn": "^7.0.3",
    "set-value": "^4.1.0",
    "vue-loader": "^17.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@nativescript/core": "~8.6.2",
    "@nativescript/webpack": "~5.0.18",
    "esbuild": "^0.19.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged --config=package.json",
    "commit-msg": "npx --no-install commitlint --edit"
  },
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write"
    ]
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true
  }
}
